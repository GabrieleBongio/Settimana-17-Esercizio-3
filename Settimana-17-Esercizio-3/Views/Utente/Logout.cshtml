@model Settimana_17_Esercizio_3.Models.Utente

@{
    ViewBag.Title = "Logout";
}

<h2>Logout</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Logout</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 d-none" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @value = "Email", @hidden = true } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 d-none" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @value = "Password", @hidden = true } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group my-4">
            <div class="col-md-offset-2 col-md-10">
                <p class="display-6">Sei sicuro di voler fare il logout?</p>
                <input type="submit" value="Si" class="btn btn-outline-danger" />
                @Html.ActionLink("No", "Index", "Prodotti", new { area = "" }, new { @class = "btn btn-outline-primary" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Torna alla Home", "Index", "Prodotti", new { area = "" }, new { @class = "btn btn-outline-primary" })
</div>
